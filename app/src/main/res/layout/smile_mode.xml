<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/back_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_shadow"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/sm_pseudo_bar_presentation_back_start_margin"
        android:layout_marginTop="@dimen/sm_pseudo_bar_presentation_back_top_margin"/>

    <ImageView
        android:id="@+id/video_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/sm_smile_mode_gallery_icon_margin"
        android:layout_marginStart="@dimen/sm_smile_mode_gallery_icon_margin"
        android:src="@drawable/gallery"
        android:visibility="invisible"/>

    <TextView
            android:id="@+id/application_name_toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/sm_app_name"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sm_application_name_toast_text_size"
            android:layout_marginTop="@dimen/sm_application_name_toast_top_margin"/>

    <View
        android:id="@+id/border_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>