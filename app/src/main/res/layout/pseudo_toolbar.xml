<?xml version="1.0" encoding="utf-8"?>
<com.asus.zenheart.smilemirror.PseudoToolBar android:id="@+id/title_layout"
                                             xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="@dimen/sm_coach_mode_pseudo_bar_height"
                                             android:background="@android:color/black">

    <ImageView
        android:id="@+id/image_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sm_presentation_back_start_margin"
        android:layout_marginTop="@dimen/sm_presentation_back_top_margin"
        android:src="@drawable/back_shadow"/>

    <TextView
        android:id="@+id/text_present_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/presentation_title_padding"

        android:layout_toEndOf="@+id/image_back"
        android:layout_toStartOf="@+id/image_list"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sm_editor_tool_bar_title_text_size"/>

    <ImageView
        android:id="@id/image_list"
        android:layout_width="@dimen/sm_coach_mode_pseudo_bar_width"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/image_setting"
        android:scaleType="center"
        android:src="@drawable/list"/>

    <ImageView
        android:id="@id/image_setting"
        android:layout_width="@dimen/sm_coach_mode_pseudo_bar_width"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:src="@drawable/setting"/>

</com.asus.zenheart.smilemirror.PseudoToolBar>